{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build:styles && cross-env NODE_ENV=production node -r dotenv/config node_modules/.bin/remix build",
    "dev": "npm run build:styles:watch | cross-env NODE_ENV=development node -r dotenv/config node_modules/.bin/remix dev",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production node -r dotenv/config node_modules/.bin/remix-serve build",
    "create": "plop",
    "format": "lint-staged",
    "build:styles": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/styles.css --postcss",
    "build:styles:watch": "npm run build:styles -- --watch",
    "test": "cross-env NODE_ENV=test node -r dotenv/config node_modules/.bin/jest",
    "test:watch": "npm run test -- --watch",
    "storybook": "npm run build:styles:watch | start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prisma:migrate": "node -r dotenv/config node_modules/.bin/prisma migrate dev",
    "prisma:format": "prisma format",
    "copy:fonts": "rsync node_modules/@fontsource/source-sans-pro/files/source-sans-pro-latin-{400,600,700}-normal.woff public/fonts",
    "make": "make",
    "test:func": "node -r dotenv/config node_modules/.bin/cypress run",
    "test:func:live": "node -r dotenv/config node_modules/.bin/cypress open"
  },
  "dependencies": {
    "@fontsource/source-sans-pro": "^4.5.6",
    "@hookform/resolvers": "^2.8.8",
    "@prisma/client": "^3.11.1",
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "@supabase/supabase-js": "^1.33.2",
    "commander": "^9.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "jsonschema": "^1.4.0",
    "nodemailer": "^6.7.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.30.0",
    "remix": "^1.2.3",
    "remix-auth": "^3.2.1",
    "remix-auth-supabase": "^3.1.0",
    "remix-utils": "^2.11.1",
    "schema-to-yup": "^1.11.10",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "^0.0.9",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^27.4.1",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/yup": "^0.29.13",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.3",
    "cypress": "^9.5.4",
    "daisyui": "^2.8.0",
    "esbuild": "^0.14.37",
    "eslint": "^8.9.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-storybook": "^0.5.7",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "json-schema-to-typescript": "^10.1.5",
    "lint-staged": "^12.3.7",
    "mailhog": "^4.16.0",
    "plop": "^3.0.5",
    "postcss-import": "^14.1.0",
    "postcss-nesting": "^10.1.3",
    "prisma": "^3.11.1",
    "prisma-json-schema-generator": "^2.0.11",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx,json}": "prettier --write"
  }
}
